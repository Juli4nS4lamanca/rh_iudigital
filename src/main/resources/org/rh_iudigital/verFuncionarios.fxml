<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.rh_iudigital.verFuncionariosController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Listado de Funcionarios" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <Button fx:id="returnButton" text="Atras" onAction="#atras" AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0" />

        <TableView fx:id="tablaFuncionarios" layoutX="10.0" layoutY="40.0" prefHeight="350.0" prefWidth="580.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="40.0">
