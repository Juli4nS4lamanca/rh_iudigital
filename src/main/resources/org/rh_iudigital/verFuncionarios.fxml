                <TableColumn fx:id="colID" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colIdentificacion" prefWidth="120.0" text="No. Identificación" />
                <TableColumn fx:id="colNombreCompleto" prefWidth="120.0" text="Nombre Completo" />
                <TableColumn fx:id="colTelefono" prefWidth="120.0" text="Teléfono" />
                <TableColumn fx:id="colAcciones" prefWidth="120.0" text="Acciones" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</AnchorPane>