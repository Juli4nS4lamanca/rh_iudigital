<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" prefWidth="500.0" prefHeight="450.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.rh_iudigital.FormFormacionController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Agregar Formación Académica" style="-fx-font-weight: bold;">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints prefWidth="250"/>
        </columnConstraints>

        <Label text="Universidad:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtUniversidad" promptText="Ingrese universidad" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Título:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTitulo" promptText="Ingrese título" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Nivel de Estudio:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbNivelEstudio" promptText="Seleccione nivel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Funcionario:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbFuncionario" promptText="Seleccione un funcionario" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox alignment="CENTER" spacing="10.0">
        <Button text="Guardar" onAction="#guardarFormacion"/>
        <Button text="Cancelar" onAction="#cerrarFormulario"/>
    </HBox>
</VBox>
