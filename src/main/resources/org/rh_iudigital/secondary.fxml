<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.rh_iudigital.SecondaryController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>
    <children>
        <Label text="Nuevo Empleado" style="-fx-font-weight: bold;">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <GridPane hgap="15.0" vgap="15.0" alignment="CENTER" maxWidth="400.0">

            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>

            <columnConstraints>
                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>

            <Label text="Tipo de Documento:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ChoiceBox fx:id="tipoDocumentoChoiceBox" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="No. Identificación:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="no_identificacion" promptText="Ingrese No. Identificación" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Nombres:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="nombres" promptText="Ingrese Nombres" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Apellidos:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="apellidos" promptText="Ingrese Apellidos" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Estado Civil:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ChoiceBox fx:id="estadoCivilChoiceBox" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Sexo:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <ChoiceBox fx:id="sexoChoiceBox" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <TextField fx:id="direccion" promptText="Ingrese Dirección" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <TextField fx:id="telefono" promptText="Ingrese Teléfono" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <Label text="Fecha Nacimiento:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <DatePicker fx:id="fecha_nacimiento" promptText="Seleccione Fecha" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="8" />

        </GridPane>

        <HBox alignment="CENTER" spacing="10.0">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>

            <Button fx:id="secondaryButton" text="Guardar" onAction="#guardarEmpleado" />
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>

            <Button fx:id="returnButton" text="Atras" onAction="#atras" />
        </HBox>

    </children>
</VBox>